# Environment Configuration Template
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# APPLICATION ENVIRONMENT
# =============================================================================
NODE_ENV=development
VITE_APP_ENV=development

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Backend API Base URL
VITE_API_BASE_URL=http://localhost:3001/api

# WebSocket URL (if different from API base)
VITE_WS_URL=ws://localhost:3001

# API Version
VITE_API_VERSION=v1

# =============================================================================
# AUTHENTICATION
# =============================================================================
# JWT Configuration (for frontend verification)
VITE_JWT_ISSUER=oneclicktag.com
VITE_JWT_AUDIENCE=oneclicktag-app

# OAuth Providers
VITE_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
VITE_MICROSOFT_CLIENT_ID=your-microsoft-client-id

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================
# Google Tag Manager
VITE_GTM_CONTAINER_ID=GTM-XXXXXXX

# Google Analytics (if separate from GTM)
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry Error Tracking
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_SENTRY_ENVIRONMENT=development
VITE_SENTRY_RELEASE=1.0.0

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# PostHog Analytics
VITE_POSTHOG_KEY=phc_your_posthog_key
VITE_POSTHOG_HOST=https://app.posthog.com

# Mixpanel Analytics
VITE_MIXPANEL_TOKEN=your_mixpanel_token

# Hotjar Tracking
VITE_HOTJAR_ID=your_hotjar_id

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# LaunchDarkly or similar
VITE_FEATURE_FLAGS_SDK_KEY=sdk-key-client-side
VITE_FEATURE_FLAGS_ENVIRONMENT=development

# Internal feature flags
VITE_ENABLE_BETA_FEATURES=false
VITE_ENABLE_DEBUG_TOOLS=true
VITE_ENABLE_MOCK_API=false

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================
# Stripe (Public Keys Only)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Intercom Chat
VITE_INTERCOM_APP_ID=your_intercom_app_id

# Zendesk Widget
VITE_ZENDESK_KEY=your_zendesk_widget_key

# Crisp Chat
VITE_CRISP_WEBSITE_ID=your_crisp_website_id

# =============================================================================
# MAPS & LOCATION
# =============================================================================
# Google Maps (if needed)
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Mapbox (if needed)
VITE_MAPBOX_ACCESS_TOKEN=pk.your_mapbox_access_token

# =============================================================================
# CDN & STORAGE
# =============================================================================
# AWS S3 Bucket for uploads (public bucket for direct uploads)
VITE_AWS_S3_BUCKET=your-public-uploads-bucket
VITE_AWS_REGION=us-east-1

# Cloudinary (if used for image processing)
VITE_CLOUDINARY_CLOUD_NAME=your_cloud_name
VITE_CLOUDINARY_UPLOAD_PRESET=your_upload_preset

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Bundle Analyzer
VITE_ANALYZE_BUNDLE=false

# Source Maps
VITE_GENERATE_SOURCEMAP=true

# Development Server
VITE_DEV_SERVER_PORT=3000
VITE_DEV_SERVER_HOST=localhost

# =============================================================================
# VERCEL SPECIFIC (Auto-populated in Vercel)
# =============================================================================
# These are automatically set by Vercel, but can be used in development
VERCEL=0
VERCEL_ENV=development
VERCEL_URL=
VERCEL_REGION=
VERCEL_GIT_COMMIT_SHA=
VERCEL_GIT_COMMIT_MESSAGE=
VERCEL_GIT_COMMIT_AUTHOR_NAME=
VERCEL_GIT_REPO_SLUG=

# =============================================================================
# SECURITY
# =============================================================================
# Content Security Policy Nonce (if implementing CSP)
VITE_CSP_NONCE=

# Trusted domains for iframe embedding
VITE_TRUSTED_DOMAINS=oneclicktag.com,app.oneclicktag.com

# =============================================================================
# INTERNATIONALIZATION
# =============================================================================
# Default locale
VITE_DEFAULT_LOCALE=en-US

# Available locales
VITE_AVAILABLE_LOCALES=en-US,es-ES,fr-FR,de-DE

# =============================================================================
# PERFORMANCE
# =============================================================================
# Service Worker
VITE_ENABLE_SERVICE_WORKER=true

# Offline Support
VITE_ENABLE_OFFLINE_MODE=false

# Progressive Web App
VITE_ENABLE_PWA=true

# =============================================================================
# CUSTOM CONFIGURATION
# =============================================================================
# Application Name
VITE_APP_NAME=OneClickTag

# Application Version (usually set by CI/CD)
VITE_APP_VERSION=1.0.0

# Build Timestamp (usually set by CI/CD)
VITE_BUILD_TIMESTAMP=

# Support Email
VITE_SUPPORT_EMAIL=support@oneclicktag.com

# Documentation URL
VITE_DOCS_URL=https://docs.oneclicktag.com

# Status Page URL
VITE_STATUS_PAGE_URL=https://status.oneclicktag.com