{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "installCommand": "npm install && npx prisma generate",
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "crons": [
    {
      "path": "/api/cron/analytics",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/process-queue",
      "schedule": "* * * * *"
    },
    {
      "path": "/api/cron/health-check",
      "schedule": "*/15 * * * *"
    }
  ]
}
